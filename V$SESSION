SELECT 
    s.sid,
    s.serial#,
    s.username,
    s.status,
    s.osuser,
    s.machine,
    s.program,
    s.sql_id,
    q.sql_text,
    s.event,
    s.wait_time,
    s.seconds_in_wait
FROM 
    v$session s
LEFT JOIN 
    v$sql q ON s.sql_id = q.sql_id
WHERE 
    s.status = 'ACTIVE'
ORDER BY 
    s.sid;
